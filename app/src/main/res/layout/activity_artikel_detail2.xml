<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#f7f9fc"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tx_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:fontFamily="sans-serif-condensed"
                android:gravity="bottom"
                android:padding="@dimen/activity_horizontal_margin"
                android:textColor="#039ba0"
                android:text="Judul Artikel"
                android:textSize="@dimen/sizefont24"
                android:textStyle="bold" />

        </FrameLayout>

        <TextView
            android:id="@+id/tx_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLength="150"
            android:text="keterangan artikel"
            android:padding="@dimen/activity_horizontal_margin"
            android:textColor="@color/colorGray600"
            android:textSize="@dimen/sizefont12" />

    </LinearLayout>

</android.support.v7.widget.CardView>