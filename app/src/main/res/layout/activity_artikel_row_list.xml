<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_article"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tx_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/text_gradient"
                android:fontFamily="sans-serif-condensed"
                android:gravity="bottom"
                android:padding="@dimen/activity_horizontal_margin"
                android:textColor="@color/colorGray100"
                android:textSize="@dimen/sizefont24"
                android:textStyle="bold" />

        </FrameLayout>

        <TextView
            android:id="@+id/tx_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLength="150"
            android:padding="@dimen/activity_horizontal_margin"
            android:textColor="@color/colorGray600"
            android:textSize="@dimen/sizefont12" />

    </LinearLayout>

</android.support.v7.widget.CardView>